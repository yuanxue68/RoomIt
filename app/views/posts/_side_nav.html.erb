<div>
  <div class="side-nav row" id="slide-out">
    <% url = params[:view] == "list" ? "/posts?view=list" : "/posts" %>
    <%= form_tag "/posts", method: "get", class:"col s12", id:"filter-form" do %>
      <h6>Rent</h6>
      <div class="row">
        <% if params[:view] == "list" %>
          <%= hidden_field_tag "view", "list" %>
          <div class="input-field col s6">
            <%= text_field_tag :minRent %>
            <%= label_tag :minRent, "Min Rent" %>
          </div>
          <div class="input-field col s6"> 
            <%= text_field_tag :maxRent %>
            <%= label_tag :maxRent, 'Max Rent' %>
          </div>
        <% else %>
          <div id="rent-slider"></div>
        <% end %>
      </div>
      
      <% if params[:view] == "list" %>
        <h6>Location</h6>
        <div class="row">
          <div class="input-field col s12"> 
            <%= text_field_tag :address %>
            <%= label_tag :address, 'Location' %>
          </div>
        </div>
      <% end %>

        
      <h6>Room</h6>
      <div class="row">
        <div class="input-field col s6">
          <%= select_tag :bedroom, options_for_select((1..8).to_a.map{|num| ["#{num}", num]}) %>
          <%= label_tag :bedroom, "Number of Bedroom" %>
        </div>
        <div class="input-field col s6">
          <%= select_tag :bathroom, options_for_select((1..5).to_a.map{|num| ["#{num}", num]}) %>
          <%= label_tag :bathroom, "Number of Bathroom" %>
        </div>
      </div>

      <div class="row">
        <h6>Home Type</h6>
        <p>
          <%= radio_button_tag :home_type, "Apartment", false%>
          <%= label_tag :home_type_Apartment, "Apartment"%>
          <%= radio_button_tag :home_type, "House", false %>
          <%= label_tag :home_type_House, "House" %>
          <%= radio_button_tag :home_type, "Condominium", false %>
          <%= label_tag :home_type_Condominium, "Condominium" %>
          <%= radio_button_tag :home_type, "Town House", false %>
          <%= label_tag :home_type_Town_House, "Town House" %>
          <%= radio_button_tag :home_type, "Other", false %>
          <%= label_tag :home_type_Other, "Other" %>
        </p>
      </div>

      <div class="row">
        <h6>Room Type</h6>
        <p>
          <%= radio_button_tag :room_type, "Entire Place"%>
          <%= label_tag :room_type_Entire_Place, "Entire Place" %>
          <%= radio_button_tag :room_type, "Private Room"%>
          <%= label_tag :room_type_Private_Room, "Private Room" %>
          <%= radio_button_tag :room_type, "Shared Room"%>
          <%= label_tag :room_type_Shared_Room, "Shared Room" %>
        </p>
      </div>

      <div class="row">
        <h6>Amenities</h6>
        <div class="row">
          <%= check_box_tag :has_air %>
          <%= label_tag :has_air, "Air Conditioned" %>
        </div>
        <div class="row">
          <%= check_box_tag :has_tv %>
          <%= label_tag :has_tv, "Television" %>
        </div>
        <div class="row">
          <%= check_box_tag :has_heating %>
          <%= label_tag :has_heating, "Heating" %>
        </div>
        <div class="row">
          <%= check_box_tag :has_kitchen%>
          <%= label_tag :has_kitchen, "Kitchen" %>
        </div>
        <div class="row">
          <%= check_box_tag :has_internet%>
          <%= label_tag :has_internet, "Internet" %>
        </div>
      </div>


      <div class="row">
        <div class="input-field col s12">
          <%= text_field_tag :title, nil,  autofocus: true %>
          <%= label_tag :title, "Listing Title" %>
        </div>
      </div>

      <% if params[:view] == "list" %>
        <div class="row center-align">
          <%= submit_tag "Submit", class: "btn" %>
        </div>
      <% else %>
        <div class="row center-align">
          <%= button_tag  :Reset, class:"btn", id:"filter-reset" %>
        </div>
      <% end %>
      <br/>
      <br/>
    <% end %>
  </div>
</div>
