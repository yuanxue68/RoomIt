<div class="col s6 m4 l3">
	<div class="card">
		<div class="card-image">
			<%= image_tag 'no_picture.png' %>
		</div>
		<div class="card-content row">
			<h5><%=post.street_address%></h5>
			<div class="col s4">
				<i class="fa fa-usd"></i> <%=post.price%>
			</div>
			<div class="col s4">
				<i class="fa fa-bed"></i> <%=post.bedroom%>
			</div>
			<div class="col s4">
				<i class="fa fa-female"></i> <%=post.bathroom%>
			</div>
		</div>
	</div>
</div>
